<%= link_to "Back to Pictures", pictures_url %> | <%= link_to "Edit", edit_picture_path(@picture) %> | <%= link_to "Delete", @picture, method: :delete, data: {confirm: "Are you sure you want to delete this picture?"} %>

<p><%= @picture.title %>, <%= @picture.artist %></p>
<%= image_tag @picture.url %>

<%= form_for([@picture, @new_comment]) do |f| %>
   <p>
     <%= f.label :title %><br>
     <%= f.text_field :title %>
   </p>
    <p>
     <%= f.label :comment %><br>
     <%= f.text_field :comment %>
   </p>
   <p>
     <%= f.label :email %><br>
     <%= f.text_field :email %>
   </p>
   <p>
     <%= f.label :user %><br>
     <%= f.text_field :user %>
   </p>

<%= f.submit "Save" %>
<% end %>

<% @comments.each do |comment| %>
<p>
  <%= comment.id %>
  <%= comment.title %>
  <%= comment.comment %>
  <%= comment.user %>
  <%= comment.email %>
</p>
<% end %>

